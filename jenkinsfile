pipeline {
   agent any
   
   tools{
      maven 'Maven3.8.6'
   }

   environment {

       //def mvnHome = tool 'Maven3.8.6'
       //def mvnCMD ="${mvnHome}/bin/mvn"
      // PATH = "/usr/bin/mvn:$PATH"

       registryName = 'edhriacr2022'
       registryUrl = 'edhriacr2022.azurecr.io'
       registryCredential = 'azurecontainer'
       dockerImage = ''
    }

  

   stages {
        stage('Verify Branch') {
         steps {
            echo "$GIT_BRANCH"
            }
         }
               
        stage('Build Stage') {
            steps {
            echo 'Building..'
            sh 'mvn clean install -f shopfront/pom.xml'
            sh 'mvn clean install -f productcatalogue/pom.xml'
            sh 'mvn clean install -f stockmanager/pom.xml'
          
            }
        }
        
   
        stage('Test Stage') {
            steps {
                echo 'Testing..'
            }
        }
        
        
       stage ('Build Docker Image')  {
       
       steps {
                echo 'Building docker images..'
                sh 'pwd'
                sh 'ls'
                sh 'docker images -a'
                sh 'cd shopfront/target/'
                sh 'ls'
                sh 'docker build -t edhriacr2022/shopfront:1.0 .'
                sh 'docker images -a'
                sh 'cd ..'
                //sh 'docker build -t edhriacr2022/productcatalogue:1.0 .'
                //sh 'docker build -t edhriacr2022/stockmanager:1.0 .'
               // sh ' docker images -a'
            }
        
      

       }
       
       
        stage('Deploy Stage') {
            steps {
                echo 'Deploying....'
            }
        }
    }
 }  

