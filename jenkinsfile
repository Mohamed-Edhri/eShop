pipeline {
   agent any

   stages {
        stage('Verify Branch') {
         steps {
            echo "$GIT_BRANCH"
            }
         }
               
         stage('Build Stage') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test Stage') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy Stage') {
            steps {
                echo 'Deploying....'
            }
        }
    }
 }  

